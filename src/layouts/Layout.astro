---
import { BsDiscord } from 'react-icons/bs';
import { BsTwitterX } from 'react-icons/bs';
import IconA from './../components/Icons.js';
import '@fontsource-variable/raleway';
import '@fontsource-variable/montserrat';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content=" Welcome to Spectrum: Your Gateway to Secure your virtual enviroment."
    />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="https://i.postimg.cc/brwnqZPS/final-48x48.jpg"
    />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="keywords"
      content="Cybersecurity services, Virtual enviroment security, Web Vulnerability analysis, Business cybersecurity solutions, Security recommendations, Cybersecurity education, Cloud server security, Penetration testing, Digital security solutions, Cybersecurity Consulting, Server optimization, Online security analysis, Virtual infrastructure protection, Proactive security solutions"
    />
    <meta name="copyright" content="Spectrum Labs" />
    <meta name="author" content="Luxus" />
    <meta name="robots" content="index, follow" />
    <meta name="color-scheme" content="#000000" />

    <title>{title}</title>
  </head>
  <body class="min-h-screen font-raleway flex flex-col">
    <header class="text-color grow-0 bg-footer pl-4 pt-5 pb-5">
  <div
    class="max-w-desktop w-full ml-auto mr-auto flex items-center gap-4">
    <!-- Imagen -->
    <img
      src="https://i.postimg.cc/QtXBX2bB/e681b2ff-6c9b-4ec8-a5fe-6ccfd82086ab.jpg"
      class="w-10 h-auto object-cover object-center"
      alt=""
    />
    <!-- Texto "Spectrum" -->
    <h1 class="text-xl font-bold font-montserrat">Spectrum</h1>
  </div>
</header>
  </body>
  <slot />
 <footer class="text-color grow-0 bg-footer pt-5 pb-5">
  <div class="text-center ml-auto mr-auto max-w-desktop h-full flex flex-col">
    <div class="flex flex-col items-center gap-4 pt-4 pb-4 grow p-4">
      <div>
        <span
          class="text-xl font-montserrat font-bold tracking-wider md:text-2xl lg:text-3xl"
          >Spectrum</span
        >
      </div>
      <aside class="flex flex-col items-center gap-8">
        <!-- Social Media Section -->
        <div class="flex flex-col items-center">
          <h3 class="text-md font-semibold mb-2">Social media</h3>
          <nav class="text-icon">
            <ul class="flex items-center justify-center gap-4">
              <li>
                <IconA title="Discord" href="https://discord.gg/Spm5eWSnuv">
                  <BsDiscord size="1.5rem" />
                </IconA>
              </li>
              <li>
                <IconA title="X" href="https://x.com/spectrum_token?s=21">
                  <BsTwitterX size="1.5rem" />
                </IconA>
              </li>
            </ul>
          </nav>
        </div>

        <!-- Support Us Section -->
        <div class="flex flex-col items-center text-center">
          <h3 class="font-semibold text-lg mb-2">Support us:</h3>
          <a
            href="https://link.trustwallet.com/send?address=0xDB8C90f7771EBd3209a90f5a39B813E9Ed222054&asset=c966"
            target="_blank"
            rel="noopener noreferrer"
            class="mb-2 block"
            ><em>Click Here to donate POL with Trust Wallet</em></a
          >
          <p class="text-sm sm:text-base">
            <span class="font-bold">BTC</span>:
            bc1q800kscz27h8r5tw8g7l952q607y6l9x5guesya
          </p>
        </div>
      </aside>
    </div>
    <p class="text-xs grow-0">
      &copy;2025 Spectrum labs | All rights reserved
    </p>
  </div>
</footer>
</html>
